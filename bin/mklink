#!/bin/sh

BINDIR=`pwd`

for d in ../src/*.d; do
  cd $BINDIR/$d
  rm -rf est; ln -s ../../include/est/
  rm -rf lib; ln -s ../../lib/
done

echo --------------------------------------------------------------------------------

cd $BINDIR

for hpp in `cat ../include/est.hpp|\
		grep "#include"|\
		sed -e "s/\"est\///g"|\
		sed -e "s/\"//g"|\
		awk '{print $2}'`;do
    echo -n -------------------------------------------------------------------
    echo "" $hpp
    (cd ../include/est/; rm -f $hpp)
    FILE=`find ../ -name $hpp -print`
    (cd ../include/est/; ln -s ../$FILE)
done

echo --------------------------------------------------------------------------------

cd $BINDIR

for d in ../src/*.d; do
    echo -n ---------------------------------------------------------------------
    echo $d | sed -e "s/\.\.\/src\// /"
    cd $BINDIR/$d
    make clean
    make obj
done

echo --------------------------------------------------------------------------------
